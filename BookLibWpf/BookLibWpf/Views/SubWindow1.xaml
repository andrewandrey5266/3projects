<Window x:Class="BookLibWpf.Views.SubWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="SubWindow1" Height="300" Width="300">
    <StackPanel>
        <TextBlock Margin="5" Text="Title:" FontWeight="Bold" FontFamily="Cambria" />
        <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="NameTextBox"/>

        <TextBlock Margin="5" Text="Author:" FontWeight="Bold" FontFamily="Cambria" />
        <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="AuthorTextBox"/>

        <TextBlock Margin="5" Text="Number of pages:" FontWeight="Bold" FontFamily="Cambria" />
        <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="NumOfPagesTextBox"/>

        <TextBlock Margin="5" Text="Year of publication:" FontWeight="Bold" FontFamily="Cambria" />
        <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="YearTextBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="YesButton" Margin="5" Content="Submit" Background="{x:Null}" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Margin="5" Content="Cancel" Background="{x:Null}" Click="NoButton_Click" />
        </StackPanel>
    </StackPanel>
   
</Window>
