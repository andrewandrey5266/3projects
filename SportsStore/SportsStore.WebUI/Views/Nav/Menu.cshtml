@model IEnumerable<string>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">

            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "List", "Product")</li>
             @*   <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Products
                    <span class="caret"></span></a>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Products <span class="caret"></span></a>
                <ul class="dropdown-menu"> 
                @foreach(var link in Model)
                        {
                    <li>
                        @Html.RouteLink(link.ToString(), new
                                {
                                    controller = "Product",
                                    action = "List",
                                    category = link,
                                    page = 1
                                })
                
                    </li>

                        }       
                </ul>
                <li><a href="#">Discounts</a></li>
                <li><a href="#">Contact</a></li>   
                
                
            </ul>
            <form class="navbar-form navbar-left">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Enter product name">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <ul class="nav navbar-nav navbar-right">
                <li>             
                    @{Html.RenderAction("Summary", "Cart", Session["Cart"]);}
                </li>
                <li><a href="#"><span class="glyphicon glyphicon-user"></span>Sign in</a></li>
            </ul>  
            </div>
    </div>
</nav>