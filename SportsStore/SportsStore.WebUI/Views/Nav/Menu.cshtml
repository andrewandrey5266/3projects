@model IEnumerable<string>
@using SportsStore.ViewModel.Models;



<div class="jumbotron">
    <div class="container text-center">
        <h1>COLD STEEL STORE</h1>
    </div>
</div>
<nav class="navbar navbar-inverse">
    <div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "List", "Product")</li>
          
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Products <span class="caret"></span></a>
                <ul class="dropdown-menu"> 
                @foreach(var link in Model) // change to ng-repeat
                        {
                    <li>
                        @Html.RouteLink(link.ToString(), new
                                {
                                    controller = "Product",
                                    action = "List",
                                    category = link,
                                    page = 1
                                })
                
                    </li>

                        }       
                </ul>
                <li><a href="/Product/Contacts">Contact</a></li>  
            </ul>
            <form class="navbar-form navbar-left">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Enter product name">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                           
                        </button>
                    </div>
                </div>
            </form>

            <ul class="nav navbar-nav navbar-right">                
          
                    @if (Session["Auth"] == null)
                    {
                    <li>
                    <a href="/Account/Login">
                    <span class="glyphicon glyphicon-log-in"></span>
                    Log in</a>   
                    </li>  
                    }
                    @if (Session["Auth"] != null)
                    {
                     
                    <li>@{Html.RenderAction("Summary", "Cart", Session["Cart"]);}</li>
                    
                        
                    <li>
                        <a href="/Account/Profile">
                        <span class="glyphicon glyphicon-user"></span>
                        Profile</a>   
                    </li>
                        
                    if ( ((UserViewModel)Session["Auth"]).IsAdmin == true)
                    {
                        <li><a href ="/Admin/Index">Moderate section</a></li>                            
                    }
                    
                        <li>
                            <a href="/Account/Logout">
                                <span class="glyphicon glyphicon-log-out"></span>
                                Log out</a>
                        </li>  
                    }
            </ul>  
            </div>
    </div>
</nav>
