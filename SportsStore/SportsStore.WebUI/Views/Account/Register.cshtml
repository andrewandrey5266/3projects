@model SportsStore.ViewModel.Models.RegistryViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<h1 align="center">Register</h1>
<hr />
<div class="container-fluid">
    <form action="/Account/Register" method="post" data-toggle="validator" class="register-form">
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                 <b>NAME</b>
                 <input name="Name" class="form-control" type="text" required="required">
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                <b>SURNAME</b>
                <input name="firstName" class="form-control" type="text" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                <b>LOGNAME</b>
                <input name="firstName" class="form-control" type="text" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                <b>EMAIL</b>
                <input name="email" class="form-control" type="email" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                <b>PASSWORD</b>
                <input name="password" class="form-control" id="inputPass" type="password" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">
                <b>PASSWORD(Repeat)</b>
                <input class="form-control" data-match="#inputPass" type="password" required> 
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-1  col-md-offset-5">
                <button class="btn btn-default logbutton" type="submit">Confirm</button>

            </div>
            <div class="col-md-6 ">
                <button class="btn btn-default regbutton" >Go back</button>
            </div>
        </div>
    </form>
</div>

