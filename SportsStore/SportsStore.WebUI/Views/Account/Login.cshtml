@model SportsStore.ViewModel.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align="center">Log In</h1><hr />


    <form action="/Account/Login" method="post" data-toggle="validator" class="register-form">
       <div align="center"> @Html.ValidationSummary() </div>       
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <b>LOGNAME</b>
                <input name="Logname" class="form-control" type="text" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <b>PASSWORD</b>
                <input name="Password" class="form-control" type="password"   data-minlength="6">
                <div class="help-block with-errors"></div>
            </div>
        </div>
        
        <hr>
        <div class="row">
            <div class="col-md-1 col-md-offset-5">
                <button class="btn btn-default logbutton" type="submit">Confirm</button>

            </div>
            <div class="col-md-1">
                <a class="btn btn-default regbutton" href="/Account/Register">Register</a>
            </div>
        </div>
    </form>


