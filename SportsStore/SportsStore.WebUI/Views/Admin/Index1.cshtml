@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section scripts{
  <script src="~/Scripts/Custom/AdminEdit.js"></script>
}


<div id="summaryDisplay" class="display">
    <h4>Edit Productsa</h4>
    <table>
        <thead>
            <tr>
                <th class="selectCol"></th>
                <th class="nameCol">Name</th>
                <th class="desctiptionCol">Desctiption</th>   
            </tr>
        </thead>
        <tbody id="tableBody">
            <tr>
                <td colspan="3">The data is loading</td>
            </tr>
        </tbody>
    </table>
    <div id="buttonContainer">
        <button id="refresh">Refresh</button>
        <button id="add">Add</button>
        <button id="edit">Edit</button>
        <button id="delete">Delete</button>
    </div>
</div>
 
<div id="addDisplay" class="display">
    <h4>Add New Reservation</h4>
    @{
AjaxOptions addAjaxOpts = new AjaxOptions
{
// options will go here
};
    }
    @using (Ajax.BeginForm(addAjaxOpts))
{
        @Html.Hidden("ReservationId", 0)
        <p>
            <label>Name:</label>@Html.Editor("ClientName")</p>
        <p>
            <label>Location:</label>@Html.Editor("Location")</p>
        <button type="submit">Submit</button>
}
</div>
<div id="editDisplay" class="display">
    <h4>Edit Reservation</h4>
    <form id="editForm">
        <input id="editReservationId" type="hidden" name="ProductId" />
        <p>
            <label>Name:</label><input id="editClientName" name="Name" /></p>
        <p>
            <label>Location:</label><input id="editLocation" name="Description" /></p>
    </form>
    <button id="submitEdit" type="submit">Save</button>
</div>
